<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/shopcar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
    />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <CheckBox
            android:id="@+id/qx"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
        />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
             android:text="全选"/>
        <TextView
            android:id="@+id/heji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:text="合计："
           />
        <TextView
            android:id="@+id/countprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="￥ 0.0"
            android:textColor="#ff0606"
            app:layout_constraintTop_toBottomOf="@id/shopcar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/heji"/>

        <Button
            android:id="@+id/settlement"
            android:layout_width="@dimen/dp_118"
            android:layout_height="@dimen/dp_50"
            android:background="#ff5e70"
            android:layout_marginLeft="@dimen/dp_80"
            android:textSize="@dimen/sp_16"
            android:layout_weight="1"
            android:text="去结算"
            android:textColor="#ffffff"/>
    </LinearLayout>






</LinearLayout>
