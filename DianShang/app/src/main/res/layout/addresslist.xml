<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/dp_20"
    app:cardElevation="@dimen/dp_3"
    android:layout_margin="@dimen/dp_20">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/realname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="#666666"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:text="收到货就是的"/>
        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="#666666"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:text="123672637"/>
        <TextView
            android:id="@+id/address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="sdhsjakhdk"
            app:layout_constraintTop_toBottomOf="@id/realname"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <RadioButton
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@id/address"
            app:layout_constraintBottom_toBottomOf="@id/updata"
            android:layout_marginBottom="@dimen/dp_10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            app:layout_constraintLeft_toRightOf="@id/btn"
            app:layout_constraintTop_toTopOf="@id/btn"
            app:layout_constraintBottom_toBottomOf="@id/btn"
            android:text="设置为默认收货地址"
            android:layout_marginLeft="@dimen/dp_10"/>
        <Button
            android:id="@+id/updata"
            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            android:text="修改"
            android:textSize="@dimen/sp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/btn"
            app:layout_constraintRight_toLeftOf="@id/delete"/>
        <Button
            android:id="@+id/delete"
            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textSize="@dimen/sp_10"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/btn"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/dp_20"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>